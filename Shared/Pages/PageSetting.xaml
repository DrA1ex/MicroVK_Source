<Page x:Class="PageSetting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:loc="clr-namespace:MicroVK.My.Resources"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      Title="PageSetting"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">
    <Grid>
        <Grid>
            <mui:ModernTab x:Name="ModernTab1"
                           Layout="List"
                           SelectedSource="/Content/ControlSettingsAppearance.xaml">
                <mui:ModernTab.Links>
                    <mui:Link DisplayName="{x:Static loc:Resources.appearance}" Source="/Content/ControlSettingsAppearance.xaml" />
                    <mui:Link DisplayName="{x:Static loc:Resources.Notification}" Source="/Content/ContentSettingNotification.xaml" />
                    <mui:Link DisplayName="{x:Static loc:Resources.programm}" Source="/Content/ControlSettingSystem.xaml" />
                </mui:ModernTab.Links>
            </mui:ModernTab>
        </Grid>
    </Grid>
</Page>
