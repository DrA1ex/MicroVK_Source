<UserControl x:Class="PageFriends"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:loc="clr-namespace:MicroVK.My.Resources"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      d:DesignHeight="300"
      d:DesignWidth="600"
      mc:Ignorable="d">
    <Grid>
        <mui:ModernTab x:Name="ModernTab1">
            <mui:ModernTab.Links>
                <mui:Link x:Name="Link1" DisplayName="{x:Static loc:Resources.All}" />
                <mui:Link x:Name="Link2" DisplayName="{x:Static loc:Resources.Online}" />
                <mui:Link x:Name="Link3" DisplayName="{x:Static loc:Resources.common}" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
