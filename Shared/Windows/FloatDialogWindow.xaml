<mui:ModernWindow
    x:Class="FloatDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:microVk="clr-namespace:MicroVK"
    xmlns:mui="http://firstfloorsoftware.com/ModernUI"
    Style="{StaticResource FloatDialogWindows}"
    d:DataContext="{d:DesignInstance microVk:MyTabItem}"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Topmost="{Binding Source={x:Static microVk:MySettings.Default}, Path=FloatTopMost, Mode=OneWay}"
    mc:Ignorable="d">
    <Grid>
        <ContentControl Content="{Binding Frame}" />
    </Grid>
</mui:ModernWindow>
