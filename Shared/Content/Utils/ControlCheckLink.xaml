<UserControl x:Class="Shared.ControlCheckLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <StackPanel>
        <TextBox metro:TextBoxHelper.Watermark="Custom icon style"
                             metro:TextBoxHelper.UseFloatingWatermark="True"
                             metro:TextBoxHelper.ButtonContent="4"
                             metro:TextBoxHelper.ButtonCommand="{Binding TextBoxButtonCmd, Mode=OneWay}"
                            
                             Style="{DynamicResource MetroButtonPasswordBox}"/>
    </StackPanel>
</UserControl>
