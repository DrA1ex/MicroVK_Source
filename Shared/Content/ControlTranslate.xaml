<UserControl x:Class="ControlTranslate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="clr-namespace:MicroVK.My.Resources"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="{x:Static loc:Resources.TranslateThanks}"
                   TextWrapping="Wrap"
                   xml:space="preserve" />
        <mui:BBCodeBlock>
            <mui:BBCodeBlock.BBCode>• English ([url=https://vk.com/alexander_sherstobitov]Alexander Sherstobitov[/url])</mui:BBCodeBlock.BBCode>
        </mui:BBCodeBlock>
        <mui:BBCodeBlock>
            <mui:BBCodeBlock.BBCode>• Беларускі ([url=https://vk.com/siedielnikov]Ваня Седельников[/url])</mui:BBCodeBlock.BBCode>
        </mui:BBCodeBlock>
        <mui:BBCodeBlock Margin="0,8,0,0"  BBCode="{x:Static loc:Resources.TranslateTopic}" />
    </StackPanel>
</UserControl>
